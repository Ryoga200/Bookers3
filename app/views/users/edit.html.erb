</div>
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label><br>
          <%= f.text_field :name, autofocus: true, placeholder: @user.name%>
      </div>
     <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.attachment_field :profile_image , placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, placeholder: @user.introduction%>
      </div>
      <div class="form-group">
      <%= f.submit "Update User" ,class: "btn btn-secondary"%>
      </div>
<%end%>
 </div>
</div>
</div></main>






